# Maintainer: Pierre-Andre Saulais <pasaulais@free.fr>
pkgname=spark-git
pkgver=20100417
pkgrel=1
pkgdesc="Simple file-transfer tool"
arch=(any)
url="http://pasaulais.free.fr/spark"
license=('GPL')
depends=('python>=2.6' 'pyqt>=4')
makedepends=()
provides=('spark')
source=('http://pasaulais.free.fr/spark/icons.tar.gz')
md5sums=('6f6357c7e0b8f934cc9a8db08690864b')

_gitroot="git://github.com/xya/Spark.git"
_gitname="spark"

build() {
    cd "$srcdir"
    msg "Connecting to GIT server...."
    if [ -d $_gitname ]; then
        cd $_gitname && git pull origin master
        msg "The local files are updated."
    else
        git clone $_gitroot $_gitname
        cd $_gitname
    fi
    
    msg "GIT checkout done or server timeout"
    msg "Starting make..."
    
    if [ ! -x "$srcdir/spark/icons" ]; then
        ln -s "$srcdir/icons" "$srcdir/spark/icons"
    fi
    
    python "$srcdir/$_gitname/build/linux/setup.py" install     \
        --root="$pkgdir/" --install-data=/usr/share/spark       \
        --optimize=1 || return 1
}
